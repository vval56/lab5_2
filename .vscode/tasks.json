{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc сборка активного файла",
            "command": "/usr/bin/gcc",
            "args": [
                    "-g",
                    "${workspaceFolder}/main.c",
                    "${workspaceFolder}/stack_int.c",
                    "${workspaceFolder}/two_stacks.c",
                    "${workspaceFolder}/arithmetic_expression.c",
                    "-o",
                    "${workspaceFolder}/main"
                ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}
